{% extends 'base.html.twig' %}

{% block title %}All categories{% endblock %}

{% block body %}
    <h1>Toutes les catégories de série : </h1>
        {% for category in categories %}

        <div class = "liencategory">
            <a href="{{ path("category_show", { categoryName: category.Name }) }}"><h2 class ="titrecategory">{{ category.Name }}</h2></a>
            {# Lien vers les séries correspondant à la catégorie choisie : #}
        </div>
    {% else %}
        Aucune catégorie correspondante n'a été trouvée.
    {% endfor %}

    <a class = "button" href="{{ path('app_index') }}">
        Retour à l'accueil
    </a>
{% endblock %}