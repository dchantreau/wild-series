{% extends 'base.html.twig' %}

{% block title %}Série #{{ program.id }}{% endblock %}

{% block body %}
    <div class="media">
        <img class="poster" src="{{program.poster}}" alt="{{ program.title }} poster">
        <div class="desc">
            <h1>{{ program.title }}</h1>
            <p>{{ program.summary }}</p>
            <p>Catégorie : {{ program.category.name }}</p>
        </div>
    </div>

    <a href="{{ path('program_index') }}">
        Retour à la liste des programmes
    </a>
    <br>
    <div>
        <a class = "button" href="{{ path('app_index') }}">
            Retour à l'accueil
        </a>
    </div>
{% endblock %}